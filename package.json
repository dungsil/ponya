{
  "name": "ponya",
  "version": "0.0.0",
  "repository": "git@github.com:dungsil/ponya.git",
  "author": "Kim Younggeon <mail@kyg.kr>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:unocss": "yarn workspace unocss-preset-ponya dev",
    "build:unocss": "yarn workspace unocss-preset-ponya build",
    "build": "run-p -s build:*",

    "publish": "lerna publish --conventional-commits --changelog-header-message \"Ponya\" --canary --preid build --dist-tag next --create-release github",
    "publish:latest": "lerna publish --conventional-commits --changelog-header-message \"Ponya\" --dist-tag latest --create-release github"
  },
  "devDependencies": {
    "@lerna-lite/cli": "^1.5.1",
    "@types/node": "18.0.0",
    "npm-run-all": "true4.1.5",
    "typescript": "4.7.3"
  }
}
