{
  "name": "ponya-monorepo",
  "version": "0.0.0",
  "repository": "git@github.com:dungsil/ponya.git",
  "author": "Kim Younggeon <mail@kyg.kr>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:unocss": "yarn workspace unocss-preset-ponya dev",
    "dev": "yarn workspace ponya dev",

    "build:unocss": "yarn workspace unocss-preset-ponya build",
    "build:normalize": "yarn workspace @ponya/normalize build",
    "build": "run-p -s build:*",

    "publish": "lerna publish --conventional-commits --changelog-header-message \"Ponya\" --dist-tag latest --create-release github"
  },
  "devDependencies": {
    "@lerna-lite/cli": "1.5.1",
    "@types/node": "18.0.0",
    "npm-run-all": "4.1.5",
    "typescript": "4.7.4"
  }
}
